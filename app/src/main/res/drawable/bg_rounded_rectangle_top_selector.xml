        <shape android:shape="rectangle">
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <solid android:color="#ea4b1b" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>