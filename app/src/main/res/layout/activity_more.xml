<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical"
    tools:context="sjtb.e_nci.com.centurysecure.main.MoreActivity">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="1dp">

        <!-- 上圆角 -->

        <LinearLayout style="@style/top_layout"
            android:id="@+id/ll_feedback"
            >

            <TextView
                style="@style/tv_setting"
                android:text="意见反馈"
                android:id="@+id/textView10" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <!-- 分割线 -->

        <View style="@style/bg_line" />
        <!-- 无圆角 -->

        <LinearLayout style="@style/mid_layout"
            android:id="@+id/ll_about_us"
            >

            <TextView
                style="@style/tv_setting"
                android:text="关于我们" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/ll_clean_cache"
            style="@style/mid_layout">

            <TextView
                style="@style/tv_setting"
                android:text="缓存清理" />

            <TextView
                android:id="@+id/tv_cache_size"
                style="@style/tv_setting"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:paddingRight="16dp"
                android:text="0KB" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />
        <!-- 下圆角 -->

        <LinearLayout style="@style/bottom_layout"
            android:id="@+id/ll_check_update"
            >

            <TextView
                android:id="@+id/textView9"
                style="@style/tv_setting"
                android:text="检查更新" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

    <!--  <item name="android:orientation">vertical</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_marginLeft">8dp</item>
      <item name="android:layout_marginRight">8dp</item>
      <item name="android:layout_marginTop">8dp</item>
      <item name="android:padding">1px</item>
      <item name="android:background">@drawable/bg_layout_shape</item>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_rounded_rectangle_all_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="退出登录"
        android:textColor="#333333"
        android:textSize="16sp"
        android:id="@+id/tv_exit_login" />

</LinearLayout>